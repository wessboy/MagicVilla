@model MagicVilla_Web.Models.ViewModels.VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber">
    <br />
    <input asp-for="VillaNumber.VillaNo" class="form-control" hidden />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa Number</h1>
        <hr />
        <div class="row">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.VillaNo" class="form-control" disabled />
           
            </div>



            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textArea asp-for="VillaNumber.SpecialDetails" class="form-control" disabled></textArea>
               
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" class="control-label pt-2" style="font-size:20px;">Villa</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaId" asp-items="@Model.VillaList" class="form-select" disabled>
                    <option disabled selected>--Select Villa--</option>
                </select>
                
            </div>



            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
