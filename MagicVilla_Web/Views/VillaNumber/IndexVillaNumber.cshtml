@model List<MagicVilla_Web.Models.Dtos.VillaNumberDTO>

<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>  Create New Villa</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                   Villa Name
                </th>
                <th>
                    Villa Number
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Villa.Name
                    </td>
                    <td>
                        @item.VillaNo
                    </td>
                    
                    <td>
                        <a class="btn btn-success" asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaNo="@item.VillaNo"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-danger ms-1" asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaNo="@item.VillaNo"><i class="bi bi-trash-fill"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
